<div>
    <div class="row">
        {{#each footer}}

        <div class="col-2">
            <div class="card border-0">
                <div class="nav flex-column">
                    {{#each this}}
                    {{#if @last}}
                    <div class="nav-item">
                        <a href="{{href}}" class="btn btn-link disabled"> {{text}} </a>
                    </div>
                    {{else}}
                    <div class="nav-item">
                        <a href="{{href}}" class="btn btn-link"> {{text}} </a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>