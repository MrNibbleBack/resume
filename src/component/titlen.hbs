<div>
    {{#if main}}
    <h2 class="text-center">
        <span class="badge bg-primary"> {{title}} </span>
    </h2>
    {{else}}
    {{#if notmain}}
    <h3 class="text-center">
        <span class="badge text-bg-info"> {{title}} </span>
    </h3>
    {{else}}
    <h4 class="text-center">
        <span class="badge text-bg-light"> {{title}} </span>
    </h4>
    {{/if}}
    {{/if}}
</div>