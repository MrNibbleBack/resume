<div class="card m-2">
    <div class="nav nav-tabs">
        {{#each links}}
        {{#if @first}}
        <div class="nav-item">
            <a href="{{href}}" class="nav-link active"> {{text}} </a>
        </div>
        {{else}}
        {{#if href}}
        <div class="nav-item">
            <a href="{{href}}" class="nav-link"> {{text}} </a>
        </div>
        {{else}}
        <div class="nav-item">
            <a href="{{href}}" class="nav-link disabled"> {{text}} </a>
        </div>
        {{/if}}
        {{/if}}
        {{/each}}
        {{#with form}}
        {{#with input}}
        {{/with}}
        {{/with}}
        <div class="nav-item">
            <a href="#" class="nav-link disabled">Disabled</a>
        </div>
    </div>
</div>