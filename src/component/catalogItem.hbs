{{#each dim}}
<div class="col-6">
    <div class="card m-1">
        <img src="{{img}}" class="card-img-top">
        <div class="card-body">
            <div class="mb-4">
                {{#if isHot}}
                <span class="badge text-bg-warning text-light rounded-pill text-uppercase">HOT!</span>
                {{/if}}
                {{#if isNew}}
                <span class="badge text-bg-primary rounded-pill">New</span>
                {{/if}}
            </div>
            {{#if isFast}}
            <div class="my-2">
                <span class="badge text-bg-success">Fast shipping</span>
            </div>
            {{/if}}
            {{#if isFree}}
            <div class="my-2">
                <span class="badge text-bg-secondary">Free shipping</span>
            </div>
            {{/if}}
            <div class="my-3">
                <h3> {{name}} </h3>
                <p> {{review.amount}} {{review.text}} </p>
                <p class="display-6"><b> {{price}} </b></p>
                <p> {{delivery}} </p>
                {{#each buttons}}
                {{#if isPrimary}}
                <div class="my-3">
                    <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
                </div>
                {{/if}}
                {{#if isSecondary}}
                <div class="my-3">
                    <a href="{{link}}" class="btn btn-secondary"> {{text}} </a>
                </div>
                {{/if}}
                {{/each}}
                <div>
                    <ul>
                        {{#each characteristics}}
                        <li> {{title}}: {{value}} </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}