<header>
    <div>
        <div class="card m-2 mb-5">
            {{#with navigation}}
            <div class="nav nav-tabs">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link" target="_blank">{{text}}</a>
                </div>
                {{/each}}
                <div class="nav-item">
                    <a href="#" class="nav-link disabled">Disabled</a>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    <div class="m-5">
        {{#with newsBlock}}
        <h2 class="text-center my-5"> {{title}} </h2>
        <div class="row g-4">
            {{#each cards}}
            <div class="col-3">
                <div class="card text-bg-dark">
                    <div class="card-header">
                        {{title}}
                        {{#if isNew}}
                        <button class="btn btn-success rounded-pill">New</button>
                        {{/if}}
                        {{#if isTop}}
                        <button class="btn btn-danger rounded-pill">Top</button>
                        {{/if}}
                    </div>
                    <div class="card-body">
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
</header>
<hr>
<main>
    <div class="my-5 mx-3">
        {{#with goodsBlock}}
        <div class="nav nav-tabs my-5">
            {{#each tabs}}
            <div class="nav-item">
                {{#if isActive}}
                <a href="#" class="nav-link active"> {{text}} </a>
                {{else}}
                {{#if isDisabled}}
                <a href="#" class="nav-link disabled"> {{text}} </a>
                {{else}}
                <a href="#" class="nav-link"> {{text}} </a>
                {{/if}}
                {{/if}}
            </div>
            {{/each}}
        </div>
        <div class="row g-3 my-5">
            {{#each cards}}
            <div class="col-4">
                <div class="card">
                    <img class="card-img-top" src="{{image}}" alt="title">
                    <div class="card-header display-6 text-capitilize"> {{title}}
                        {{#if isHot}}
                        <button class="btn btn-warning rounded-pill text-uppercase">HOT!</button>
                        {{/if}}
                        {{#if isNew}}
                        <button class="btn btn-primary rounded-pill">New</button>
                        {{/if}}
                    </div>
                    <div class="card-body"> {{description}} </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
        <div>
            {{#with subscribe}}
            <div class="card text-bg-dark p-2">
                <h2> {{header}} </h2>
                <p> {{description}} </p>
                {{#each buttons}}
                <a href="{{href}}">
                    <button class="btn btn-primary m-1"> {{text}} </button>
                </a>
                {{/each}}
                {{/with}}
            </div>
        </div>
        <div class="my-3">
            <div class="card p-3 text-bg-success text-center">
                {{#with service}}
                <h2> {{title}} </h2>
                <p> {{description}} </p>
                {{#each buttons}}
                <a href="{{href}}">
                    <button class="btn btn-primary m-1"> {{text}} </button>
                </a>
                {{/each}}
                {{/with}}
            </div>
        </div>
    </div>
    <hr>
</main>

<footer class="m-5">
    <div class="row">
        {{#each footer}}
        <div class="col-2">
            <div class="card border-0">
                <div class="nav flex-column">
                    {{#each this}}
                    {{#if @last}}
                    <div class="nav-item">
                        <a href="{{href}}" class="btn btn-link disabled"> {{text}} </a>
                    </div>
                    {{else}}
                    <div class="nav-item">
                        <a href="{{href}}" class="btn btn-link"> {{text}} </a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</footer>