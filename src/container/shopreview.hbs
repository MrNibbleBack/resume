<header>
    <nav>
        {{#with navigation}}
        {{> menushop }}
        {{/with}}
    </nav>
</header>
<main>
    <div class="row">
        {{#with formBlock}}
        <div class="col-8">
            <div class="mx-2 my-5">
                <h1 class="mb-3"> {{header}} </h1>
                {{#with rating}}
                <p> {{title}}: {{value}} </p>
                {{/with}}
                {{#with actionBlock}}
                <nav>
                    <div class="nav nav-tabs mb-5">
                        {{#each tabs}}
                        <div class="nav-item">
                            {{#if isActive}}
                            <a href="#" class="nav-link active"> {{text}} </a>
                            {{else}}
                            <a href="#" class="nav-link"> {{text}} </a>
                        </div>
                        {{/if}}
                        {{/each}}

                    </div>
                </nav>
                <hr>
                <div class="card p-3 my-5">
                    {{#with report}}
                    <p> {{title}} </p>
                    {{#with button}}
                    <div>
                        <a href="{{link}}" class="btn btn-secondary btn-lg"> {{text}} </a>
                    </div>
                    {{/with}}
                    {{/with}}
                </div>
                {{/with}}
                <hr>
                <div class="card border-0 p-3 mt-5">
                    {{#with feedbackBlock}}
                    <p class="display-5 mb-5"><b> {{title}} </b></p>
                    <div class="row">
                        <div class="col-12">
                            {{#each buttons}}
                            {{#if isWarning}}
                            <a href="{{link}}" class="btn btn-warning btn-lg mx-2"> {{text}} </a>
                            {{else}}
                            {{#if isSuccess}}
                            <a href="{{link}}" class="btn btn-success btn-lg mx-2"> {{text}} </a>
                            {{else}}
                            {{#if isDanger}}
                            <a href="{{link}}" class="btn btn-danger btn-lg mx-2"> {{text}} </a>
                            {{/if}}
                            {{/if}}
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
        </div>

        <div class="col-4">
            {{#with goodsInfo}}
            <div class="card mt-5 me-2">
                <img src="{{photo}}" alt="{{name}}" width="300" height="300" class="p-4">
                <div class="card-body">
                    <h4 class="card-title"> {{name}} </h4>
                </div>
            </div>
            <div class="card mt-3 me-2 p-3">
                <p><b> {{price}} </b></p>
                {{#if inMarket}}
                <p>Є в наявності</p>
                {{else}}
                <p>Відсутній</p>
                {{/if}}
                {{#each buttons}}
                {{#if isPrimary}}
                <div class="py-1">
                    <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
                </div>
                {{else}}
                {{#if isSecondary}}
                <div class="py-1">
                    <a href="{{link}}" class="btn btn-secondary"> {{text}} </a>
                </div>
                {{/if}}
                {{/if}}
                {{/each}}
            </div>
            <div class="card  mt-3 me-2 p-3">
                {{#with seller}}
                <p> {{title}}: <b> {{value}} </b></p>
                {{/with}}
            </div>
            {{/with}}
        </div>
        {{/with}}
    </div>
    <hr>
    {{> reviewItem dim=reviewList}}
    <div class="card  text-center text-bg-success m-2 p-3 mb-5">
        {{#with service}}
        <h2> {{title}} </h2>
        <p> {{description}} </p>
        {{#each buttons}}
        <div>
            <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
        </div>
        {{/each}}
        {{/with}}
    </div>
    <hr>
</main>

<footer class="mt-3">
    {{> footershop}}
</footer>