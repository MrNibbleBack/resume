<div>
    <h1 class="text-center">
        <span class="badge bg-secondary">JavaScript</span>
    </h1>
    <hr>
    <br>
    <section>
        <div>
            <p><dfn title="It's a programming language">Javascript</dfn></p>
            <p> {{description}} </p>
        </div>
        <hr>
        <br>
        <div>
            <h5 class="text-center">History</h5>
            <br>
            {{#with history}}
            <p>Year: {{year}} </p>
            <address>Founder: {{founder}} </address>
            {{/with}}
        </div>
        <br>
        <hr>
        <div>
            <p class="text-center"><b>Types</b></p>
            <ul class="list-group list-group-flush">
                {{#each types}}
                <li class="list-group-item"> {{this}} </li>
                {{/each}}
            </ul>
        </div>
        <br>
        <div>
            <p class="text-center"><b>Syntax</b></p>
            <ul>
                {{#with syntax}}
                {{> syntax name='Variables' dim=variables }}
                <br>
                {{> syntax name='Functions' dim=functions }}
                <br>
                {{> syntax name='Conditionals' dim=conditionals }}
                <br>
                {{> syntax name='Loops' dim=loops }}
                <br>
                {{> syntax name='Classes' dim=classes }}
                {{/with}}
            </ul>
        </div>
        <br>
        <div>
            <p class="text-center"><b>Featchures</b></p>
            <ul>
                {{#each features}}
                <li> {{this}} </li>
                {{/each}}
            </ul>
        </div>
        <hr>
        <div>
            <p class="text-center"><b>Libraries</b></p>
            {{#each libraries}}
            <span class="badge rounded-pill text-bg-info"> {{this}} </span>
            {{!-- <li> {{this}} </li> --}}
            {{/each}}
        </div>
        <br>
        <hr>
        <div>
            <p class="text-center"><b>Tools</b></p>
            {{#each tools}}
            <span class="badge text-bg-info"> {{this}} </span>
            {{/each}}
        </div>
        <br>
        <hr>
        <div>
            <p class="text-center"><b>Community</b></p>
            <ul>
                {{#each community}}
                <li>
                    <button type="button" class="btn btn-link">
                        <a href="#" target="_blank"> {{name}} </a>
                    </button>
                    <p><i>{{type}}</i></p>
                </li>
                {{/each}}
            </ul>
        </div>
    </section>
</div>