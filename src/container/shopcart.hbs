<header>
    <nav>
        {{#with navigation}}
        {{> menushop href=href text=text}}
        {{/with}}
    </nav>
    {{#with header}}
    <div class="my-5 mx-2">
        <h1> {{title}} </h1>
        {{#with button}}
        <div class="my-3">
            <a href="{{link}}">
                <button class="btn btn-outline-dark"> {{text}} </button>
            </a>
        </div>
        {{/with}}
        {{/with}}
    </div>
</header>
<hr>

<main>
    {{> cardGoodsItem }}
    <hr>
    <div class="my-5 mx-4">
        {{#with total}}
        <h3> {{title}} </h3>
        <p class="display-3"> {{amount}} </p>
        <p> {{delivery}} </p>
        {{#each buttons}}
        {{#if isSuccess}}
        <div class="mt-3">
            <a href="{{link}}">
                <button class="btn btn-success"> {{text}} </button>
            </a>
        </div>
        {{else}}
        {{#if isOutline}}
        <div class="mt-3">
            <a href="{{link}}">
                <button class="btn btn-outline-success"> {{text}} </button>
            </a>
        </div>
        {{/if}}
        {{/if}}
        {{/each}}
        {{/with}}
    </div>
    <hr>
    <div class="my-5">
        {{#with goodsOtherBlock}}
        <h2 class="text-center my-5"> {{title}} </h2>
        <div class="row">
            {{#each cards}}
            <div class="col-4">
                <div class="card mx-3">
                    <img class="card-img-top" src="{{image}}" alt="{{title}}">
                    <div class="card-body">
                        <h5 class="card-title display-6 py-3"> {{title}}
                            {{#if isHot}}
                            <button class="btn btn-warning rounded-pill">HOT!</button>
                            {{else}}
                            {{#if idNew}}
                            <button class="btn btn-primary rounded-pill">NEW</button>
                            {{/if}}
                            {{/if}}
                        </h5>
                        <p> {{description}} </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr>
    <div class="mx-3 my-5">
        {{#with subscribe}}
        <div class="card text-bg-dark py-3 px-3">
            <h2> {{header}} </h2>
            <p> {{description}} </p>
            {{#each buttons}}
            <div class="py-2">
                <a href="{{link}}">
                    <button class="btn btn-primary btn-lg"> {{text}} </button>
                </a>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>
    <hr>
</main>

<footer>
    {{> footershop href=href text=text}}
</footer>