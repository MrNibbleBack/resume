<header>
    <nav>
        {{#with navigation}}
        {{> menushop }}
        {{/with}}
    </nav>
    <div class="row">
        <div col="12">
            <div class="mt-5 mb-4">
                <nav class="mx-3">
                    <ol class="breadcrumb">
                        {{#each breadcrumb}}
                        {{#if url}}
                        <li class="breadcrumb-item"><a href="{{url}}"> {{name}} </a></li>
                        {{else}}
                        <li class="breadcrumb-item active"> {{name}} </li>
                        {{/if}}
                        {{/each}}
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</header>

<main class="mx-2">
    <h1> {{header}} </h1>
    <div class="row my-5">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select form-select-lg">
                <option selected> {{placeholder}} </option>
                {{#each options}}
                <option value="{{value}}"> {{text}} </option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>
    <div class="row">
        <div class="col-4">
            <div class="card p-3">
                {{#with filterBlock}}
                <div>
                    {{#with sellers}}
                    <div class="form-label pb-3"> {{title}} </div>
                    {{#each list}}
                    <div class="form-check py-1">
                        <label class="form-check-label"> {{value}} </label>
                        <input name="seller" type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
                <hr>
                <div>
                    {{#with brands}}
                    <div class="form-label pb-3"> {{title}} </div>
                    <input class="form-control form-control-lg mb-3" placeholder="{{input.placeholder}}">
                    {{#each options}}
                    <div class="form-check py-1">
                        <label class="form-check-label"> {{value}} </label>
                        <input name="brand" type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                    {{/with}}
                </div>
                <hr>
                <div>
                    {{#with price}}
                    <p> {{title}} </p>
                    <input class="form-control form-control-lg my-4" placeholder="{{range.from}}">
                    <input class="form-control form-control-lg my-4" placeholder="{{range.to}}">
                    <a href="{{button.link}}" class="btn btn-outline-secondary btn-lg"> {{button.text}} </a>
                    {{/with}}
                </div>
                <hr>
                <div>
                    {{#each filterList}}
                    {{> filterItem dim=this}}
                    <hr>
                    {{/each}}
                </div>
                {{/with}}
            </div>
        </div>

        <div class="col-8">
            <div class="row">
                {{> catalogItem dim=goodsList}}
            </div>
        </div>
    </div>

    <div class="card  text-center text-bg-success m-2 p-3 mb-5">
        {{#with service}}
        <h2> {{title}} </h2>
        <p> {{description}} </p>
        {{#each buttons}}
        <div>
            <a href="{{link}}" class="btn btn-primary"> {{text}} </a>
        </div>
        {{/each}}
        {{/with}}
    </div>
    <hr>
</main>

<footer class="mt-3">
    {{> footershop}}
</footer>