<main>
    <div>
        {{#with heading}}
        <div class="card">
            <div class="card-body">
                {{#with main}}
                {{!-- {{> task21 }} --}}
                <div>
                    <h1> {{title}} </h1>
                    <p> {{text}} </p>
                    {{#with button_text}}
                    <div>
                        <button class="btn btn-primary"> {{solid}} </button>
                    </div>
                    <br>
                    <div>
                        <button class="btn btn-outline-primary"> {{outline}} </button>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">
                {{#with second}}
                <div>
                    <h2> {{title}} </h2>
                    <p> {{text}} </p>
                    {{#with button_text}}
                    <div>
                        <button class="btn btn-secondary"> {{solid}} </button>
                    </div>
                    <br>
                    <div>
                        <button class="btn btn-outline-secondary"> {{outline}} </button>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
        <br>
        <div class="card">
            <div class="card-body">
                {{#with subblock}}
                <div>
                    <h3> {{title}} </h3>
                    <p> {{text}} </p>
                    {{#with button_text}}
                    <div>
                        <button class="btn btn-dark"> {{solid}} </button>
                    </div>
                    <br>
                    <div>
                        <button class="btn btn-outline-dark"> {{outline}} </button>
                    </div>
                    {{/with}}
                </div>
                {{/with}}
            </div>
        </div>
        {{/with}}
    </div>

    <br>
    <div class="card">
        <div class="card-body">
            {{#with nested_display}}
            <div>
                <div class="display-1"> {{title}} </div>
                <div class="card">
                    <div class="card-body">
                        {{#with children_display}}
                        <div class="display-4"> {{title}} </div>
                        <p> {{text}} </p>
                        <button class="btn btn-outline-warning btn-lg"> {{button.text}} </button>
                        {{/with}}
                    </div>
                </div>
                <br>
                <div>
                    <h6> {{header_text}} </h6>
                    <br>
                    <button class="btn btn-info text-light"> {{button.text}} </button>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    <br>
    <div class="card">
        <div class="card-body">
            {{#with paragraph}}
            <p class="text-uppercase"> {{title}} </p>
            <p class="text-lowercase"> {{text}} </p>
            <a href="{{button.url}}" class="btn btn-link"> {{button.text}} </a>
            <div class="card">
                <div class="card-body">
                    <ul>
                        {{#each list_name}}
                        <li>
                            <a href="{{url}}" class="btn btn-link"> {{text}} </a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            {{/with}}
        </div>
    </div>
</main>